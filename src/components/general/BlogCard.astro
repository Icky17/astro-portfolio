---
import type { IBlogPost } from "@types";

const { post } = Astro.props as { post: IBlogPost };
---

<a href={`/blog/${post.slug}`} class="block group">
  <article class="bg-white dark:bg-dark-gray rounded-lg overflow-hidden shadow-lg transition-all duration-300 group-hover:shadow-xl group-hover:scale-[1.02] mb-8">
    <div class="aspect-video overflow-hidden">
      <img 
        src={post.thumbnail} 
        alt={post.title}
        class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
      />
    </div>
    <div class="p-6">
      <h3 class="text-xl font-semibold mb-2 dark:text-light">{post.title}</h3>
      <p class="text-gray-600 dark:text-gray-400 mb-4">{post.description}</p>
      <time class="text-sm text-gray-500 dark:text-gray-400">{new Date(post.date).toLocaleDateString()}</time>
    </div>
  </article>
</a>